{
  "name": "@principal-ade/industry-themed-monaco-editor",
  "version": "0.1.9",
  "description": "Industry-themed Monaco editor wrapper with presentation capabilities",
  "type": "module",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "bun run clean && bun run build:esm && bun run build:types",
    "build:esm": "NODE_ENV=production bun build ./index.ts --outfile ./dist/index.mjs --format esm --target browser --external react --external react-dom --external @monaco-editor/react --external monaco-editor --external @principal-ade/industry-theme --external monaco-vim",
    "build:types": "tsc --project tsconfig.build.json --emitDeclarationOnly --declaration --declarationMap",
    "dev": "bun run build --watch",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf dist coverage",
    "storybook": "storybook dev -p 6007",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "monaco",
    "editor",
    "code-editor",
    "theme",
    "industry"
  ],
  "author": "Principal ADE Team",
  "license": "MIT",
  "dependencies": {
    "@principal-ade/industry-theme": "^0.1.2",
    "monaco-vim": "^0.4.2"
  },
  "peerDependencies": {
    "@monaco-editor/react": ">=4.0.0",
    "monaco-editor": ">=0.50.0",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@monaco-editor/react": "^4.7.0",
    "@storybook/addon-docs": "^9.1.10",
    "@storybook/addon-onboarding": "^9.1.10",
    "@storybook/addon-webpack5-compiler-swc": "^4.0.1",
    "@storybook/react-webpack5": "^9.1.10",
    "@storybook/test": "^8.6.14",
    "@types/bun": "latest",
    "@types/node": "^22.15.26",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-storybook": "^9.1.10",
    "monaco-editor": "^0.52.2",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "storybook": "^9.1.10",
    "typescript": "^5.0.4",
    "typescript-eslint": "^8.38.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/principal-ade/industry-themed-monaco.git"
  },
  "homepage": "https://principal-ade.com"
}
